    Description:
        Estructura de la tabla roles_access.
-->
<tabla>
    <columna>
        <nombre>codrol</nombre>
        <tipo>character varying(20)</tipo>
        <nulo>NO</nulo>
    </columna>
    <columna>
        <nombre>page</nombre>
        <tipo>character varying(30)</tipo>
        <nulo>NO</nulo>
    </columna>
    <columna>
        <nombre>allow_delete</nombre>
        <tipo>boolean</tipo>
        <nulo>NO</nulo>
        <defecto>true</defecto>
    </columna>
    <columna>
        <nombre>allow_modify</nombre>
        <tipo>boolean</tipo>
        <nulo>NO</nulo>
        <defecto>true</defecto>
    </columna>
    <columna>
        <nombre>allow_download</nombre>
        <tipo>boolean</tipo>
        <nulo>NO</nulo>
        <defecto>true</defecto>
    </columna>
    <restriccion>
        <nombre>roles_access_pkey</nombre>
        <consulta>PRIMARY KEY (codrol, page)</consulta>
    </restriccion>
    <restriccion>
        <nombre>roles_access_roles</nombre>
        <consulta>FOREIGN KEY (codrol) REFERENCES roles (codrol) ON DELETE CASCADE ON UPDATE CASCADE</consulta>
    </restriccion>
    <restriccion>
        <nombre>roles_access_page</nombre>
        <consulta>FOREIGN KEY (page) REFERENCES pages (name) ON DELETE CASCADE ON UPDATE CASCADE</consulta>
    </restriccion>
</tabla>
